<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.example.admin.movieappv2.Main3Activity">



    <TextView

        android:id="@+id/MovieName"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#009687"
        android:gravity="left|center"
        android:paddingLeft="19dp"
        android:text="hello how are you"
        android:textSize="24dp"
        android:textStyle="bold"


        />

    <ImageView
        android:id="@+id/smallImage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_below="@+id/MovieName"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="115dp"
        android:layout_height="75dp"
        android:layout_below="@+id/MovieName"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/smallImage"
        android:text="asfdasdasd"
        android:textColor="#e7645c5c"
        android:textSize="18dp"

        />

    <TextView
        android:id="@+id/overView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/smallImage"

        android:layout_marginTop="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="10dp"
        android:paddingTop="7dp"
        android:textColor="#000000"
        android:textSize="17dp" />








</RelativeLayout>
